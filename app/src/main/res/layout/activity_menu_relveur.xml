<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Menu_relveur">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="32dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">
                        <!--<com.google.android.material.navigation.NavigationView-->
                        <!--    android:layout_width="wrap_content"-->
                        <!--    android:layout_height="wrap_content"-->
                        <!--    app:menu="@menu/menu_relv"/>-->
                        <TextView
                            android:id="@+id/txt_menu_principale"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/light_orange"
                            android:padding="15dp"
                            android:text="Menu Principale"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/lb_compte"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="Compte :"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_ajouter_compteur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Ajouter Compteur"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btn_changer_tournee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Changer Tournee"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btn_non_lus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Non Lus"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btn_rechercher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Rechercher"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btn_lecture_par_secteur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Lecture Par Secteur"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btn_lecture_par_rue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Lecteur Par Rue"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/lb_stat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="statistique :"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_stat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="statistique" />


                        <TextView
                            android:id="@+id/lb_autre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="Autre :"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_changer_mot_pass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Chenger Mot De Passe" />

                        <Button
                            android:id="@+id/btn_afficher_anomalie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Afficher anomalie" />
                        <Button
                            android:id="@+id/btn_fermer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/home_relveur"
                            android:text="Quitter" />
                </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
